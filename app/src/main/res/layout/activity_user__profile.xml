<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhumihar.friendchat.User_Profile">


    <include layout="@layout/toolbar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6FA"
        >


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_icon2"
        android:layout_marginLeft="80dp"
        android:id="@+id/imageset"
        />

      <ImageButton
          android:layout_marginTop="160dp"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/ic_cam"
          android:layout_gravity="bottom|center"
          android:layout_marginStart="60dp"
          android:background="@drawable/round_shape1"
          android:id="@+id/imagebutton"
          />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6FA"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_marginTop="@dimen/Medium_Size"
            android:paddingTop="10dp"
            android:layout_width="@dimen/Textview_Size"
            android:layout_height="@dimen/Textview_height"
            android:background="@drawable/round_shape"
            android:text="UserName"
            android:textSize="@dimen/small_Size"
            android:id="@+id/username"
            />
        <ImageButton
            android:layout_marginTop="@dimen/Medium_Size"
            android:paddingTop="10dp"
            android:layout_width="@dimen/Textview_height"
            android:layout_height="@dimen/Textview_height"
            android:layout_toRightOf="@+id/username"
            android:src="@drawable/kcolorchooser"
            android:background="@color/white"
            android:text="Button"
            android:id="@+id/useredit"
            />
        />



    <TextView
        android:layout_marginTop="@dimen/Very_Small_Size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="18dp"
        android:layout_below="@+id/username"
        android:text="@string/username"
        />
    </RelativeLayout>


  <TextView
      android:layout_marginTop="@dimen/Very_Small_Size"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
      android:text="Status and Birthday"
      android:textColor="@color/colorPrimaryDark"
      />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/Very_Small_Size"
            android:paddingTop="10dp"
            android:layout_width="@dimen/Textview_Size"
            android:layout_height="@dimen/Textview_height"
            android:background="@drawable/round_shape"
            android:text="Available"
            android:textSize="@dimen/small_Size"
            android:id="@+id/status"
            />
        <ImageButton
            android:layout_marginTop="@dimen/Very_Small_Size"
            android:paddingTop="10dp"
            android:layout_width="@dimen/Textview_height"
            android:layout_height="@dimen/Textview_height"
            android:layout_toRightOf="@+id/status"
            android:src="@drawable/kcolorchooser"
            android:background="@color/white"
            android:text="Button"
            android:id="@+id/statusedit"
            />

        <TextView
            android:layout_marginTop="@dimen/small_Size"
            android:paddingTop="10dp"
            android:layout_width="@dimen/Textview_Size"
            android:layout_height="@dimen/Textview_height"
            android:layout_below="@+id/status"
            android:background="@drawable/round_shape"
            android:text="Bday"
            android:textSize="@dimen/small_Size"
            android:id="@+id/bday"
            />
        <ImageButton
            android:layout_marginTop="@dimen/small_Size"
            android:paddingTop="10dp"
            android:layout_width="@dimen/Textview_height"
            android:layout_height="@dimen/Textview_height"
            android:layout_below="@+id/status"
            android:layout_toRightOf="@+id/bday"
            android:src="@drawable/kcolorchooser"
            android:background="@color/white"
            android:text="Button"
            android:id="@+id/bdayedit"
            />
        />


    </RelativeLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
