<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bhumihar.friendchat.CreatePost"
    android:background="#E6E6FA"
    >


        <EditText
            android:layout_marginTop="2dp"
            android:id="@+id/edit_post"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Write Something"
            android:background="@drawable/rectangle"
            />

    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/image_choose"
        android:layout_below="@+id/edit_post"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/image_choose"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_camera"
            android:id="@+id/open_cam"
            android:background="#E6E6FA"
            />
        <ImageButton
            android:layout_marginTop="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/insta1"
            android:id="@+id/open_gallery"
            />
        <Button
            android:layout_marginTop="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:background="@color/white"
            android:text="Post"
            android:id="@+id/done_post"
            />
    </LinearLayout>

</RelativeLayout>
